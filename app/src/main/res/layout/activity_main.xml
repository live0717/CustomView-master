<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.amos.customview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCustomUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义控件使用示例"/>


            <Button
                android:id="@+id/btnStartService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开启服务"/>

            <Button
                android:id="@+id/btnStopService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止服务"/>

            <Button
                android:id="@+id/btnRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rv封装"/>

            <Button
                android:id="@+id/btnRxJavaMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RxJava使用示例"/>

            <Button
                android:id="@+id/btnEventBus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EventBus使用示例"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
